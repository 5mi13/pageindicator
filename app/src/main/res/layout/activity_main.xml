<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.v7.widget.RecyclerView
      android:id="@+id/list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layoutManager="android.support.v7.widget.LinearLayoutManager"
      />
  <com.prolificinteractive.PageIndicator
      android:id="@+id/pageIndicator"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#00440000"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/list"
      />

  <Button
      android:id="@+id/leftBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="Left"
      app:layout_constraintEnd_toStartOf="@+id/rightBtn"
      app:layout_constraintHorizontal_chainStyle="packed"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/pageIndicator"
      style="@style/Widget.AppCompat.Button.Colored"
      />
  <Button
      android:id="@+id/rightBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="right"
      app:layout_constraintBaseline_toBaselineOf="@id/leftBtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/leftBtn"
      style="@style/Widget.AppCompat.Button.Colored"
      />

</android.support.constraint.ConstraintLayout>
